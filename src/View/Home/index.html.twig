{% extends 'layout.html.twig' %}

{% block content %}

	<section class="header p-0 m-0 z-2 position-relative">
		<div class="header-image h-100 w-100  d-flex justify-content-center align-items-center">
			<div class="dropdown-center">
				<button class="btn-dropdown dropdown-toggle border border-3 rounded-pill p-3 d-flex justify-content-center " type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
					Tokyo
				</button>
				<ul class="dropdown-menu">
					<a class="dropdown-item" href="#">Aichi</a>
					<a class="dropdown-item" href="#">Chiba</a>
					<a class="dropdown-item" href="#">Hiroshima</a>
					<a class="dropdown-item" href="#">Hyogo</a>
					<a class="dropdown-item" href="#">Kanagawa</a>
					<a class="dropdown-item" href="#">Kyoto</a>
					<a class="dropdown-item" href="#">Nara</a>
					<a class="dropdown-item" href="#">Okinawa</a>
					<a class="dropdown-item" href="#">Osaka</a>
					<a class="dropdown-item" href="#">Tokyo</a>
				</ul>
			</div>
		</div>
	</section>


	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
				<div class="card">
					<div class="card-header text-center">
						<h4 class="card-title mb-0">Budget</h4>
					</div>
					<div class="card-body text-center">
						<p class="card-text" id="totalDisplay">0</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col text-center">
				<div class="d-inline-block w-auto">
					<select id="currencySelect" class="form-select">
						<option value="JPY">Yen japonais (JPY)</option>
						<option value="EUR">Euro (EUR)</option>
						<option value="USD">Dollar am√©ricain (USD)</option>
						<option value="GBP">Livre sterling (GBP)</option>
						<option value="AUD">Dollar australien (AUD)</option>
						<option value="CAD">Dollar canadien (CAD)</option>
					</select>
				</div>
				<button id="convert" class="btn btn-primary">Convertir</button>
			</div>
		</div>
	</div>


	<ul class="nav nav-tabs nav-justified mt-4 mb-3" id="myTab" role="tablist">
		<li class="nav-item" role="presentation">
			<button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#tab-pane-picture" type="button" role="tab" aria-controls="tab-pane-picture" aria-selected="true">Restaurants</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#tab-pane-favorite" type="button" role="tab" aria-controls="tab-pane-favorite" aria-selected="false">Activities</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#tab-pane-follows" type="button" role="tab" aria-controls="tab-pane-follows" aria-selected="false">Transport</button>
		</li>
	</ul>
	<div class="tab-content" id="myTabContent">
		<div class="tab-pane fade show active" id="tab-pane-picture" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
			{% include "cards/cardRestaurant.html.twig" %}
		</div>
		<div class="tab-pane fade" id="tab-pane-favorite" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
			{% include "cards/cardActivity.html.twig" %}
		</div>
		<div class="tab-pane fade" id="tab-pane-follows" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
			{% include "cards/cardTransport.html.twig" %}
		</div>
	</div>
	{% block javascript %}
		<script src="/assets/script/script.js"></script>
		<script src="/assets/script/budget.js"></script>
	{% endblock %}
{% endblock %}
